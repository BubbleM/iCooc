    <script>
       
        appcan.ready(function() {
           var postDate = appcan.locStorage.getVal("postDate");
           var dataPost = JSON.parse(postDate);
           //alert(dataPost.name);
           
           /*发布职位者信息*/
           document.getElementById("banImg").style.backgroundImage = "url(" + dataPost.backgroudImageUrl + ")";
           document.getElementById("img_post").src = dataPost.icon;
           document.getElementById("postName").innerHTML = dataPost.name;
           document.getElementsByClassName("companyName").innerHTML = dataPost.company;
           document.getElementById("major").innerHTML =dataPost.school + '</br>' + dataPost.major;
           document.getElementById("phoneNum").innerHTML = dataPost.phone;
           /*所在公司信息*/
           var compId1 = appcan.locStorage.getVal("compId1");
           var compId = JSON.parse(compId1);
           //alert(compId.introduction);
           document.getElementById("compLogoUrl").src = compId.compLogoUrl;
           document.getElementById("compName").innerHTML = compId.compName;
           document.getElementById("spanlist").innerHTML = compId.financingType+ '&nbsp;&nbsp|&nbsp;&nbsp' + compId.scale+ '&nbsp;&nbsp|&nbsp;&nbsp' + compId.type;
          
           
        /*个人信息*/
            appcan.ajax({
                url:'http://39.108.2.139/online/user/getMyInfo.do',
                type:'GET',
                data:{ 
                },
               contentType : 'application/json', 
               dataType:'json',
               success:function(data){
                    //alert("请求成功！");
                    var jsonText = JSON.stringify(data);
                    var contact = JSON.parse(jsonText);
                  // alert(jsonText);
                   
                },
                error:function(e){
