            //TA发布的职位 mock数据
             appcan.ajax({
                url:'http://easy-mock.com/mock/595e362d9adc231f3577867c/online/job/getJobInfoList.do',
                type:'GET',
                data:{ 
                    
                },
               success:function(data){
                    //alert("请求成功！");
                    //var dataText = JSON.stringify(data);
                    var date = JSON.parse(data);
                    //alert(dataText);
                    var position = document.getElementById('position');
                    var jobDivs = position.getElementsByClassName('jobList');
                    console.log(jobDivs.length);
                    for(var i=0;i<jobDivs.length;i++){
                        console.log(jobDivs[i]);
                        jobDivs[i].getElementsByTagName('img')[0].src = date.data[i].compId.compLogoUrl;
                        jobDivs[i].getElementsByClassName('positionName')[0].innerText = date.data[i].jobName;
                        jobDivs[i].getElementsByClassName('time')[0].innerText = date.data[i].modified;
                        jobDivs[i].getElementsByClassName('company_details')[0].innerText = date.data[i].compId.compName;
                        jobDivs[i].getElementsByClassName('info1')[0].innerHTML = date.data[i].compId.compCity + '&nbsp;|&nbsp;' +  date.data[i].compId.financingType + '&nbsp;|&nbsp;' +date.data[i].compId.type;
                        jobDivs[i].getElementsByClassName('info2')[0].innerHTML = date.data[i].education + '&nbsp;|&nbsp;' + date.data[i].experience + '&nbsp;|&nbsp;' + date.data[i].salary;
                    }
                },
                error:function(e){
                    alert("请求失败！");
                    alert(e);
                }
            });
            
            
